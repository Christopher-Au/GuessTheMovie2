package guessthemovie;

/**
 *
 * @author austichr
 */
public class UserGuess {
int guessLeft = 6;
    public void guess(String f, String userGuess){
        if(f.contains(userGuess)){
            System.out.println("You guessed a right letter!");
}
        else{
            System.out.println("You guessed wrong, sory, try again. You have " 
            + guessLeft +"guesses left.");
            guessLeft = guessLeft - 1;
        }
    }
}
